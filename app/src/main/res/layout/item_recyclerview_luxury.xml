<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_luxury_item"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tvNameUser"
        style="@style/TextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/name_hs"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddressUser"
        style="@style/TextViewBackgroundLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail"
        app:layout_constraintStart_toStartOf="@+id/tvNameUser"
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser" />

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/imgLuxury"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressUser"
        android:background="@drawable/img_home3" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#ffde03"
        app:layout_constraintBottom_toBottomOf="@+id/imgLuxury"
        app:layout_constraintEnd_toEndOf="@+id/imgLuxury"
        app:layout_constraintStart_toStartOf="@+id/imgLuxury" />

    <TextView
        android:id="@+id/tvDetailLuxury"
        style="@style/TextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:maxLines="1"
        android:maxLength="15"
        android:text="@string/detail"
        app:layout_constraintBottom_toBottomOf="@+id/imgLuxury"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgLuxury"
        app:layout_constraintTop_toTopOf="@+id/imgLuxury"
        app:layout_constraintVertical_bias="0.95"
        />

    <Button
        android:id="@+id/btnDetailLuxury"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_btn_home_selector"
        android:text="@string/detail"
        android:textColor="@drawable/text_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgLuxury"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <ImageView
        android:id="@+id/imgFavoriteLuxury"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_favorite_black_24dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="@+id/btnDetailLuxury"
        app:layout_constraintEnd_toEndOf="@+id/imgLuxury"
        app:layout_constraintTop_toTopOf="@+id/btnDetailLuxury" />




</androidx.constraintlayout.widget.ConstraintLayout>