<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_item_recyclerview"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="4dp">

        <com.androidnetworking.widget.ANImageView
            android:id="@+id/imgPriceAsc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="@drawable/img_home2"
            android:contentDescription="@string/todo"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvNamePriceAsc"
            style="@style/TextViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvPriceAsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville"
            android:text="@string/home_stay_price"
            android:textColor="@color/md_red_800"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvPriceAgo"
            style="@style/TextViewBackgroundLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
            android:text="@string/price_ago" />

        <TextView
            android:id="@+id/tvDetailPriceAsc"
            style="@style/TextViewBackgroundLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@string/detail" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetailAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail"
                android:background="@drawable/bg_btn_home_selector"
                android:textColor="@drawable/text_selected"/>

            <Button
                android:id="@+id/btnBookingAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking"
                android:background="@drawable/bg_btn_home_selector"
                android:textColor="@drawable/text_selected"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>